<main role="main" class="c-main-content">
  <div class="l-container">
  <form>
    <fieldset>
      <legend class="h2 u-text-align-center">Book an appointment</legend>
      <ul>
        <li>
          <label for="name" class="u-display-block">Name</label>
          <input class="text-input" id="name" type="text" aria-required="true">
        </li>
        <li>
          <label for="email" class="u-display-block">Email</label>
          <input class="text-input" id="email" type="email" aria-required="true">
        </li>
        <li>
          <label for="phone" class="u-display-block">Phone</label>
          <input class="text-input" id="phone" type="tel" aria-required="true">
        </li>
        <li>
          <label class="u-display-block">Additional information</label>
          <textarea></textarea>
        </li>
        <li>
          <button type="submit" class="c-button">Submit</button>
        </li>
      </ul>
    </fieldset>
  </form>
  </div>
</main>